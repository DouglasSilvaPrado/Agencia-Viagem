@model IEnumerable<WebApplication2.Models.Viagens>

@{
    ViewBag.Title = "Viagens";
}


<div class="container my-5 vh-100">
    <h2 class=" primary-color">Viagens</h2>
    <hr/>
    <p>
        @Html.ActionLink("Nova Viagem", "Create", new object { }, new { @class = "btn btn-primary" })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Origem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destino)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IDA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VOLTA)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Origem)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Destino)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IDA)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VOLTA)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Deletar", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>